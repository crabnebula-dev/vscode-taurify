{
  "name": "vscode-taurify",
  "displayName": "vscode-taurify",
  "description": "Taurify your web app",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-taurify.init",
        "title": "Taurify: Initialization"
      },
      {
        "command": "vscode-taurify.dev",
        "title": "Taurify: Run in development mode"
      },
      {
        "command": "vscode-taurify.run",
        "title": "Taurify: Run in production mode"
      },
      {
        "command": "vscode-taurify.build",
        "title": "Taurify: Start build and upload to Cloud"
      },
      {
        "command": "vscode-taurify.update",
        "title": "Taurify: Update front-end"
      }
    ],
    "configuration": {
      "title": "Taurify",
      "type": "object",
      "properties": {
        "taurify.showStatusBarApplet": {
          "type": "boolean",
          "default": true,
          "description": "Show the status bar applet"
        },
        "taurify.enableLogs": {
          "type": "boolean",
          "default": true,
          "description": "Enable writing logs from output (terminal output will not be logged)"
        },
        "taurify.logFile": {
          "type": "string",
          "default": ".taurify/taurify.log",
          "description": "File to write log output to"
        },
        "taurify.packageRunner": {
          "type": "string",
          "default": "npx",
          "description": "JS package runner (e.g. `npx`, `pnpx`, `bunx`)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "esbuild": "^0.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
